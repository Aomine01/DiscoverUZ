# ============================================
# DiscoverUz - Environment Variables Template
# ============================================
# SECURITY: NEVER commit .env or .env.local to Git
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection strings
# Provider: Neon, Supabase, or any PostgreSQL database

# Connection pooling URL (for serverless)
DATABASE_URL="postgresql://USERNAME:PASSWORD@HOST:5432/DATABASE?pgbouncer=true&connection_limit=1"

# Direct connection URL (for migrations)
DIRECT_URL="postgresql://USERNAME:PASSWORD@HOST:5432/DATABASE"

# ============================================
# SECURITY SECRETS
# ============================================
# Session secret for JWT signing (REQUIRED)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET="REPLACE_WITH_64_CHAR_HEX_STRING"

# HMAC key for email hashing in rate limiter (REQUIRED)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
EMAIL_HMAC_KEY="REPLACE_WITH_64_CHAR_HEX_STRING"

# ============================================
# EMAIL SERVICE
# ============================================
# Resend API Key - Get from: https://resend.com/api-keys
# Free tier: 100 emails/day, 3,000 emails/month
RESEND_API_KEY="re_YOUR_API_KEY_HERE"

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Public-facing app URL (MUST be HTTPS in production)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origin for API requests (NO wildcards in production)
ALLOWED_ORIGIN="http://localhost:3000"

# ============================================
# RATE LIMITING
# ============================================
# Optional Redis URL for distributed rate limiting
# Leave empty to use in-memory fallback (not recommended for production)
REDIS_URL="redis://localhost:6379"

# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW_MS="60000"

# Max requests per window
RATE_LIMIT_MAX_REQUESTS="6"

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV="development"
